<h1>My tasks</h1>
<ul>
<% @tasks.each do |task| %>
  <li>
    <% if task.completed %>
      <i class="far fa-check-square"></i>
    <% else %>
      <i class="far fa-square"></i>
    <% end %>
    <%= link_to task.title, task_path(task) %> Â·
    <%= link_to task_path(task), method: :delete, data: { confirm: "Delete #{task.title}?" } do %>
      <i class="far fa-trash-alt"></i>
    <% end %>
  </li>
<% end %>
</ul>
<hr>
<%= link_to new_task_path do %>
  <i class="fas fa-plus"></i> Add a new task
<% end %>
