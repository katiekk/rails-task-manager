<%= form_for(@task) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :details %>
  <%= f.text_area :details %>
  <%= f.check_box :completed unless @task.new_record? %>
  <%= f.label :completed unless @task.new_record? %>
  <%= f.submit @task.new_record? ? 'Create Task' : 'Update Task' %>
<% end %>
